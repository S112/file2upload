all-border-1px($color = #E7E7E7, $radius = 2px, $style = solid) {
  position: relative;
  &::after {
    box-sizing: border-box;
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    content: "";
    width: 100%;
    height: 100%;
    border: 1px $style $color;
    border-radius: $radius;
    transform-origin: 0 0;
    pointer-events: none;
    transform: scale(1);
    @media (min-resolution: 2dppx) {
      width: 200%;
      height: 200%;
      border-radius: $radius * 2;
      transform: scale(.5);
    }
  }
}
